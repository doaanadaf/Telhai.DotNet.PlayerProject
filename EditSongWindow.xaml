<Window x:Class="Telhai.DotNet.PlayerProject.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song" Height="420" Width="720"
        Background="#222" Foreground="White"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit Song (MVVM)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Details -->
            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                <TextBlock Text="File Path:" Foreground="#BBBBBB"/>
                <!-- חשוב: Mode=OneWay כדי שלא יהיה TwoWay על property read-only -->
                <TextBox Text="{Binding FilePath, Mode=OneWay}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Background="#333"
                         Foreground="White"
                         BorderBrush="#444"
                         Margin="0,0,0,12"/>

                <TextBlock Text="Custom Title:" Foreground="#BBBBBB"/>
                <!-- כאן צריך CustomTitle (TwoWay זה מעולה כי רוצים לערוך) -->
                <TextBox Text="{Binding CustomTitle, UpdateSourceTrigger=PropertyChanged}"
                         Background="#333"
                         Foreground="White"
                         BorderBrush="#444"
                         Margin="0,0,0,12"/>

                <TextBlock Text="Note: No API calls here ✅" Foreground="#8fd18f"/>
            </StackPanel>

            <!-- Right: Images -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Images (per song)" FontWeight="Bold" Margin="0,0,0,6"/>

                <ListBox ItemsSource="{Binding Images}"
                         SelectedItem="{Binding SelectedImage}"
                         Background="#333"
                         BorderBrush="#444"
                         Height="230"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Add Image" Command="{Binding AddImageCommand}" Width="110" Margin="0,0,8,0"/>
                    <Button Content="Remove" Command="{Binding RemoveImageCommand}" Width="110"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" Width="110" Margin="0,0,8,0"
                    Background="#007ACC" Foreground="White"/>
            <Button Content="Close" Width="110" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>